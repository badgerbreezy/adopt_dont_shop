<form action="/pets/<%= @pet.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  

  <input type="hidden" name="_method" value="PATCH" />
  <strong>Edit a Pet's Information:</strong>
  <p>Image URL:</p>
  <input type='text' name='pet[image]' value="<%= @pet.image %>"/><br/>
  <p>Pet name:</p>
  <input type='text' name='pet[name]' value="<%= @pet.name %>"/><br/>
  <p>Pet description:</p>
  <input type='text' name='pet[description]' value="<%= @pet.description %>"/><br/>
  <p>Pet age:</p>
  <input type='text' name='pet[age]' value="<%= @pet.age %>"/><br/>
  <p>Pet Sex:</p>
  <input type='text' name='pet[sex]' value="<%= @pet.sex %>"/><br/>


  <br/>

  <input type='submit'/>
</form>
